config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Resize Bindings
bind m:ctrl;alt;cmd    corner top-left resize:screenSizeX;screenSizeY
bind pad5:ctrl;alt;cmd    move screenSizeX/4;screenSizeY/4 screenSizeX/2;screenSizeY/2
bind pad7:ctrl;alt;cmd    corner top-left resize:screenSizeX/2;screenSizeY/2
bind pad9:ctrl;alt;cmd    corner top-right resize:screenSizeX/2;screenSizeY/2
bind pad1:ctrl;alt;cmd    corner bottom-left resize:screenSizeX/2;screenSizeY/2
bind pad3:ctrl;alt;cmd    corner bottom-right resize:screenSizeX/2;screenSizeY/2

# Push Bindings
bind right:ctrl;alt;cmd  push right bar-resize:screenSizeX/2
bind left:ctrl;alt;cmd   push left  bar-resize:screenSizeX/2
bind up:ctrl;alt;cmd     push up    bar-resize:screenSizeY/2
bind down:ctrl;alt;cmd   push down  bar-resize:screenSizeY/2

# Throw Bindings
bind right:ctrl;alt throw right resize
bind left:ctrl;alt  throw left resize 

# Window Hints
bind esc:cmd hint
