# Config {{{1
config defaultToCurrentScreen true
config windowHintsShowIcons true
config windowHintsIgnoreHiddenWindows false
config windowHintsSpread true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Alias {{{1
alias 4-mod ctrl;shift;alt;cmd
alias 3-mod ctrl;alt;cmd
alias 2-mod ctrl;alt

alias full      move screenOriginX;screenOriginY               screenSizeX;screenSizeY
alias lefthalf  move screenOriginX;screenOriginY               screenSizeX/2;screenSizeY
alias righthalf move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY

alias topleft     corner top-left     resize:screenSizeX/2;screenSizeY/2
alias topright    corner top-right    resize:screenSizeX/2;screenSizeY/2
alias bottomleft  corner bottom-left  resize:screenSizeX/2;screenSizeY/2
alias bottomright corner bottom-right resize:screenSizeX/2;screenSizeY/2

alias thirdleft  move screenOriginX;screenOriginY                 screenSizeX/3;screenSizeY
alias thirdmid   move screenOriginX+screenSizeX/3;screenOriginY   screenSizeX/3;screenSizeY
alias thirdright move screenOriginX+2*screenSizeX/3;screenOriginY screenSizeX/3;screenSizeY

alias bigleft  move screenOriginX;screenOriginY               2*screenSizeX/3;screenSizeY
alias bigmid   move screenOriginX+screenSizeX/6;screenOriginY 2*screenSizeX/3;screenSizeY
alias bigright move screenOriginX+screenSizeX/3;screenOriginY 2*screenSizeX/3;screenSizeY

alias laptop 0
alias screen1 1

alias postbox 'Postbox'
alias vim 'iTerm'
alias chrome 'Google Chrome'
alias firefox 'Firefox'
alias evernote 'Evernote'
alias spotify 'Spotify'

# Layout {{{1
default noteLayout resolutions:${laptop};${screen1};
layout noteLayout ${evernote}:MAIN_FIRST ${full} ${laptop}
layout noteLayout ${vim} ${full} ${screen1}

bind 1:${4-mod} layout noteLayout

default presentLayout resolutions:${laptop};${screen1};
layout presentLayout ${evernote}:MAIN_FIRST ${full} ${laptop}
layout presentLayout ${spotify} ${full} ${laptop}
layout presentLayout ${vim} ${full} ${screen1}

bind 2:${4-mod} layout presentLayout

# Default {{{1
# Bind {{{1
bind esc:cmd hint # Window Hints
bind g:${4-mod} grid padding:5 0:4,2 1:2,2 2:2,2

# Focus {{{2
bind v:${4-mod} focus ${vim}
bind m:${4-mod} focus ${postbox}
bind s:${4-mod} focus ${spotify}
bind e:${4-mod} focus ${evernote}

bind right:${4-mod} focus right
bind left:${4-mod} focus left
bind up:${4-mod} focus up
bind down:${4-mod} focus down

# Resize {{{2
bind 1:${3-mod} ${bigleft}
bind 2:${3-mod} ${bigmid}
bind 3:${3-mod} ${bigright}
bind 4:${3-mod} ${lefthalf}
bind m:${3-mod} ${full}
bind 5:${3-mod} ${full}
bind 6:${3-mod} ${righthalf}
bind 7:${3-mod} ${thirdleft}
bind 8:${3-mod} ${thirdmid}
bind 9:${3-mod} ${thirdright}

# Push {{{2
# Throw({{2
bind right:${2-mod} throw right resize
bind left:${2-mod}  throw left resize

# Source {{{1
