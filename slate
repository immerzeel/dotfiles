# Default {{{1
# Bind {{{1
# Focus {{{2

# bind l:ctrl:cmd focus right
# bind h:ctrl:cmd focus left
# bind k:ctrl:cmd focus up
# bind j:ctrl:cmd focus down
# bind b:ctrl:cmd focus behind
# bind f:ctrl:cmd focus behind

# Resize {{{2
bind pad1:${3-mod} ${bigleft}
bind pad2:${3-mod} ${bigmid}
bind pad3:${3-mod} ${bigright}
bind pad4:${3-mod} ${lefthalf}
bind m:${3-mod} ${full}
bind pad5:${3-mod} ${full}
bind pad6:${3-mod} ${righthalf}
bind pad7:${3-mod} ${thirdleft}
bind pad8:${3-mod} ${thirdmid}
bind pad9:${3-mod} ${thirdright}

# Push {{{2
# Throw({{2
bind right:${2-mod} throw right resize
bind left:${2-mod}  throw left resize

